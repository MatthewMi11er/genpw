# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Set default charset
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 2 space indentation
[*.{js,json,html,pug}]
indent_style = space
indent_size = 2

[*.json]
insert_final_newline = false
