{
  "description": "Generate a password.",
  "name": "genpw",
  "version": "1.0.3",
  "homepage": "https://genpw.com",
  "bugs": {
    "url": "https://github.com/MatthewMi11er/genpw/issues"
  },
  "license": "MIT",
  "author": "Matthew <matthew@mi11er.net> (https://mi11er.net)",
  "files": [
    "lib/",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "main": "passwordgenerator.js",
  "bin": {
    "genpw": "./lib/exec.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MatthewMi11er/genpw.git"
  },
  "scripts": {
    "prepublish": "run-s clean build:lib",
    "pretest": "npm run --silent lint",
    "test": "nyc mocha",
    "posttest": "nyc report --reporter=lcov",
    "lint": "eslint .",
    "build": "run-s clean build:*",
    "build:css": "node-sass src/scss/style.scss web/css/style.css",
    "build:html": "pug -o web -E html src/pug/*.pug",
    "build:js": "webpack",
    "build:lib": "babel -d lib src/js/lib",
    "clean": "rimraf .nyc_output coverage firebase-debug.log lib npm-debug.log web",
    "deploy": "run-s build deploy:firebase",
    "deploy:firebase": "firebase deploy",
    "start": "run-p watch:* start:*",
    "start:browsersync": "browser-sync start --proxy 'localhost:5000' --files web/",
    "start:firebase": "firebase serve",
    "watch:css": "run-s 'build:css -- -r -w src/scss'",
    "watch:html": "run-s 'build:html -- -w'",
    "watch:js": "run-s 'build:js -- -w'"
  },
  "dependencies": {
    "sjcl": "1.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.13.2",
    "babel-register": "^6.11.6",
    "browser-sync": "^2.14.3",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.3.3",
    "eslint": "^3.3.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.1.2",
    "firebase-tools": "^3.0.7",
    "mocha": "^3.0.2",
    "node-sass": "^3.8.0",
    "npm-run-all": "^3.1.0",
    "nyc": "^8.1.0",
    "picnic": "^6.1.5",
    "pug": "^2.0.0-beta6",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.5.4",
    "umbrellajs": "^2.6.6",
    "webpack": "^1.13.2"
  },
  "nyc": {
    "include": [
      "src/"
    ],
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ],
    "all": true
  }
}
