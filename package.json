{
  "description": "Generate a password.",
  "name": "genpw",
  "release": {
    "branch": "master"
  },
  "homepage": "https://genpw.com",
  "bugs": {
    "url": "https://github.com/genpw/genpw/issues"
  },
  "license": "MIT",
  "author": "Matthew <matthew@mi11er.net> (https://mi11er.net)",
  "files": [
    "lib/",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "main": "./dist/main/passwordgenerator.js",
  "module": "./dist/module/passwordgenerator.js",
  "bin": {
    "genpw": "./dist/main/exec.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/genpw/genpw.git"
  },
  "scripts": {
    "prepublish": "run-s build",
    "pretest": "run-s lint",
    "test": "BABEL_ENV=main nyc mocha",
    "posttest": "BABEL_ENV=main nyc report --reporter=lcov",
    "lint": "run-p lint:*",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern dist/ --fix  .",
    "lint:package.json": "jsonlint -i package.json",
    "build": "run-s clean test build:*",
    "build:main": "BABEL_ENV=main babel -d dist/main/ src/js/lib/",
    "build:module": "BABEL_ENV=module babel -d dist/module/ src/js/lib/",
    "clean": "rimraf .nyc_output coverage dist/* npm-debug.log",
    "semantic-release": "semantic-release pre && yarn publish && semantic-release post"
  },
  "dependencies": {
    "sjcl": "1.0.6"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-preset-env": "1.5.1",
    "babel-register": "6.24.1",
    "chai": "3.5.0",
    "codeclimate-test-reporter": "0.4.1",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb-base": "11.2.0",
    "eslint-plugin-import": "2.8.0",
    "greenkeeper-lockfile": "1.3.2",
    "jsonlint": "1.6.2",
    "mocha": "4.0.1",
    "npm-run-all": "4.0.2",
    "nyc": "10.3.2",
    "rimraf": "2.6.2",
    "semantic-release": "8.2.0"
  },
  "nyc": {
    "include": [
      "src/"
    ],
    "require": [
      "babel-register"
    ],
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "env": {
      "module": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current",
                "browsers": [
                  "last 2 versions"
                ]
              },
              "modules": false
            }
          ]
        ]
      },
      "main": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current",
                "browsers": [
                  "last 2 versions"
                ]
              },
              "modules": "commonjs"
            }
          ]
        ]
      }
    }
  }
}
