{
  "description": "Generate a password.",
  "name": "genpw",
  "release": {
    "branch": "master"
  },
  "homepage": "https://genpw.com",
  "bugs": {
    "url": "https://github.com/genpw/genpw/issues"
  },
  "license": "MIT",
  "author": "Matthew <matthew@mi11er.net> (https://mi11er.net)",
  "files": [
    "lib/",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "main": "./lib/passwordgenerator.js",
  "module": "./lib/module/passwordgenerator.js",
  "bin": {
    "genpw": "./lib/exec.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/genpw/genpw.git"
  },
  "scripts": {
    "prepublish": "run-s build",
    "pretest": "run-s lint",
    "test": "BABEL_ENV=main nyc mocha",
    "posttest": "BABEL_ENV=main nyc report --reporter=lcov",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern lib/ --fix  .",
    "build": "run-s clean test build:*",
    "build:main": "BABEL_ENV=main babel -d lib/ src/js/lib",
    "build:module": "BABEL_ENV=module babel -d lib/module/ src/",
    "clean": "rimraf .nyc_output coverage lib/* npm-debug.log",
    "semantic-release": "semantic-release pre && yarn publish && semantic-release post"
  },
  "dependencies": {
    "sjcl": "1.0.6"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-env": "1.5.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.0",
    "commitizen": "^2.9.5",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4",
    "semantic-release": "^6.3.5"
  },
  "nyc": {
    "include": [
      "src/"
    ],
    "require": [
      "babel-register"
    ],
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "env": {
      "module": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current",
                "browsers": [
                  "last 2 versions"
                ]
              },
              "modules": false
            }
          ]
        ]
      },
      "main": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current",
                "browsers": [
                  "last 2 versions"
                ]
              },
              "modules": "commonjs"
            }
          ]
        ]
      }
    }
  }
}
