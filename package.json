{
  "name": "genpw",
  "version": "2.0.12",
  "description": "Generate a password.",
  "homepage": "https://genpw.com",
  "bugs": {
    "url": "https://github.com/genpw/genpw/issues"
  },
  "repository": "https://github.com/genpw/genpw.git",
  "license": "MIT",
  "author": "Matthew <matthew@mi11er.net> (https://mi11er.net)",
  "files": [
    "bin",
    "lib",
    "index.js",
    "index.mjs",
    "LICENSE",
    "package.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "main": "./index.js",
  "module": "./lib/passwordgenerator.mjs",
  "bin": {
    "genpw": "./bin/exec.mjs"
  },
  "scripts": {
    "clean": "rimraf .nyc_output coverage dist/* npm-debug.log",
    "codeclimate-test-reporter": "codeclimate-test-reporter < coverage/lcov.info",
    "precommit": "run-s lint-staged pretty-quick",
    "lint": "eslint --fix .",
    "lint-staged": "lint-staged",
    "semantic-release": "semantic-release",
    "pretest": "run-s lint",
    "test": "nyc mocha --require esm test/*.js",
    "posttest": "nyc report --reporter=lcov",
    "pretty-quick": "pretty-quick --staged"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "esm": "3.0.62",
    "sjcl": "1.0.7"
  },
  "devDependencies": {
    "@mi11er/eslint-config": "2.2.2",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "chai": "4.1.2",
    "codeclimate-test-reporter": "0.5.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.28.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-no-unsafe-innerhtml": "1.0.16",
    "eslint-plugin-optimize-regex": "1.1.5",
    "eslint-plugin-scanjs-rules": "0.2.1",
    "eslint-plugin-security": "1.4.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "mocha": "9.0.0",
    "npm-run-all": "4.1.3",
    "nyc": "15.1.0",
    "prettier": "2.3.1",
    "pretty-quick": "3.1.0",
    "rimraf": "3.0.2",
    "semantic-release": "15.5.0",
    "sort-package-json": "1.15.0"
  },
  "nyc": {
    "include": [
      "lib/",
      "bin/",
      "index.js",
      "index.mjs"
    ],
    "require": [
      "esm"
    ],
    "extension": [
      ".jsx",
      ".mjs"
    ]
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/npm",
        "tarballDir": "release"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "**"
        ]
      }
    ],
    "publish": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/github",
        "assets": [
          {
            "path": "release/*.tgz",
            "label": "Package tarball"
          }
        ]
      }
    ]
  }
}
