{
  "name": "@webstronauts/submit-app",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "node -r dotenv/config ./lib | pino-colada",
    "pretest": "run-p build",
    "test": "standard && nyc --check-coverage --lines 95 ava --serial",
    "heroku-prebuild": "echo \"//registry.npmjs.org/:_authToken=${NPM_TOKEN}\" > .npmrc",
    "heroku-postbuild": "run-p build"
  },
  "engines": {
    "node": "8.9.x"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "fetch"
    ]
  },
  "ava": {
    "require": [
      "dotenv/config"
    ]
  },
  "nyc": {
    "exclude": [
      ".next",
      "next.config.js",
      "test"
    ]
  },
  "dependencies": {
    "@webstronauts/mercury": "^0.6.0",
    "@zeit/next-bundle-analyzer": "0.0.4",
    "apollo-cache-inmemory": "1.1.12",
    "apollo-client": "2.2.8",
    "apollo-fetch": "0.7.0",
    "apollo-link-batch-http": "1.2.1",
    "apollo-link-http": "1.5.3",
    "apollo-server-express": "1.3.4",
    "bcrypt": "1.0.3",
    "body-parser": "1.18.2",
    "compression": "1.7.2",
    "connect-ensure-login": "0.1.1",
    "cookie-session": "2.0.0-beta.3",
    "dotenv": "5.0.1",
    "express": "4.16.3",
    "express-https-redirect": "1.0.0",
    "final-form": "4.4.0",
    "getconfig": "4.4.1",
    "graphql": "0.13.2",
    "graphql-tag": "2.8.0",
    "graphql-tools": "2.23.1",
    "http-errors": "1.6.3",
    "isomorphic-unfetch": "2.0.0",
    "lowdb": "1.0.0",
    "next": "5.1.0",
    "npm-run-all": "4.1.2",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "pino-colada": "1.4.4",
    "prop-types": "15.6.1",
    "react": "16.3.0",
    "react-apollo": "2.1.2",
    "react-dom": "16.3.0",
    "react-final-form": "3.1.5",
    "recompose": "0.26.0",
    "shortid": "2.2.8"
  },
  "devDependencies": {
    "ava": "0.25.0",
    "babel-eslint": "8.2.2",
    "cheerio": "1.0.0-rc.2",
    "faker": "4.1.0",
    "nyc": "11.6.0",
    "standard": "11.0.1",
    "superagent": "3.8.2",
    "superagent-defaults": "0.1.14",
    "supertest": "3.0.0"
  }
}
